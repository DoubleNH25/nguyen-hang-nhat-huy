
func sum_to_n_a(n: number): number {
	let sum = 0;

	if (n >= 0) {
		for (let i = 1; i <= n; i++) {
			sum += i;
		}
	} else {
		for (let i = 1; i >= n; i--) {
			sum += i;
		}
	}
	return sum;
}

func sum_to_n_b(n: number): number {
	return (n * (n + 1)) / 2;
}

func sum_to_n_c(n: number): number {
	if (n === 0) return 0;
	return n > 0
		? n + sum_to_n_c(n - 1)
		: n + sum_to_n_c(n + 1);
}